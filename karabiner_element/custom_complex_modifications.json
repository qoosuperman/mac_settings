{
	"title": "Custom key combinations",
	"rules": [
		{
			"description": "Remap ctrl+q to Esc",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "q",
						"modifiers": {
							"mandatory": [
								"left_control"
							]
						}
					},
					"to": [
						{
							"key_code": "escape"
						}
					]
				}
			]
		},
		{
			"description": "Remap ctrl+j to down arrow",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "j",
						"modifiers": {
							"mandatory": [
								"left_control"
							]
						}
					},
					"to": [
						{
							"key_code": "down_arrow"
						}
					]
				}
			]
		},
		{
			"description": "Remap ctrl+k to up arrow",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "k",
						"modifiers": {
							"mandatory": [
								"left_control"
							]
						}
					},
					"to": [
						{
							"key_code": "up_arrow"
						}
					]
				}
			]
		},
    {
      "description": "Remap shift+ESC to grave_accent ` (for halo 65 keyboard)",
      "manipulators": [
          {
              "from": {
                  "key_code": "escape",
                  "modifiers": {
                      "mandatory": [
                          "left_shift"
                      ]
                  }
              },
              "to": [
                  {
                      "key_code": "grave_accent_and_tilde"
                  }
              ],
              "type": "basic"
          }
      ]
    },
    {
      "description": "Remap option+ESC to tilde ~(for halo 65 keyboard)",
      "manipulators": [
          {
              "from": {
                  "key_code": "escape",
                  "modifiers": {
                      "mandatory": [
                          "left_option"
                      ]
                  }
              },
              "to": [
                  {
                      "key_code": "grave_accent_and_tilde",
                      "modifiers": [
                        "left_shift",
                        "fn"
                      ]
                  }
              ],
              "type": "basic"
          }
      ]
    },
    {
      "description": "Remap command+ESC to command + `(for halo 65 keyboard)",
      "manipulators": [
          {
              "from": {
                  "key_code": "escape",
                  "modifiers": {
                      "mandatory": [
                          "left_command"
                      ]
                  }
              },
              "to": [
                  {
                      "key_code": "grave_accent_and_tilde",
                      "modifiers": [
                        "left_command"
                      ]
                  }
              ],
              "type": "basic"
          }
      ]
    }
	]
}